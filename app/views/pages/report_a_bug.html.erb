<% @title = "Create a Kitty" %>


<!-- Navbar -->
<%= render 'shared/navbar_with_menu' %>

<!-- Body -->
<div class="container">
  <div class="title-section">
    <h3>We're Sorry :(</h3>
  </div>

  <p>Kitty is still in Beta so sometimes there will be issues. By reporting it, you are helping improve Kitty for everyone and are helping change the way friends lend to each other! For that, we say thank you :)</p>

  <!-- Begin MailChimp Signup Form -->
  <div id="mc_embed_signup">
    <form action="https://kittysplit.us17.list-manage.com/subscribe/post?u=4ca3952aeef94c05a20696182&amp;id=0d8851f220" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
        <div id="mc_embed_signup_scroll">
    	<h2></h2>
    <!-- <div class="indicates-required"><span class="asterisk">*</span> indicates required</div> -->
    <div class="mc-field-group">
    	<label class="input-form-label" for="mce-EMAIL">Email Address  <span class="asterisk">*</span></label>
      <br>
    	<input type="email" value="" name="EMAIL" class="required email form-control" id="mce-EMAIL" placeholder="john@blogs.com">
    </div>
    <br>
    <div class="mc-field-group">
    	<label class="input-form-label" for="mce-FNAME">First Name  <span class="asterisk">*</span></label>
      <br>
    	<input type="text" value="" name="FNAME" class="required form-control" id="mce-FNAME" placeholder="John">
    </div>
    <br>
    <div class="mc-field-group">
    	<label class="input-form-label" for="mce-ISSUE">Bug Description  <span class="asterisk">*</span></label>
      <br>
    	<input type="text" value="" name="ISSUE" class="required form-control" id="mce-ISSUE" placeholder="e.g. adding expense in new group not working">
    </div>
    <br>
    	<div id="mce-responses" class="clear">
    		<div class="response" id="mce-error-response" style="display:none"></div>
    		<div class="response" id="mce-success-response" style="display:none"></div>
    	</div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
        <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_4ca3952aeef94c05a20696182_0d8851f220" tabindex="-1" value=""></div>
        <div class="fixed-btn-section">
          <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button send-btn-primary"></div>
        </div>
        </div>
    </form>
  </div>

<!--End mc_embed_signup-->
</div>
