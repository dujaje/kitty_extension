                <p class="btn btn-filled-primary no-margin"><i class="fa fa-search fa-fw" aria-hidden="true"></i> See Group</p>
              <% end %>
              <button type="button" class="popover-info-btn ml-2"> ? </button>
            <% end %>
            </div>
          </div>
        </div>
