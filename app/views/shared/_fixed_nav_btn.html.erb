<% if @group != "no_group" %>
  <div class="container">
    <div class="floaty">
      <ul class="floaty-list">
        <li class="floaty-list-item floaty-list-item--blue">
          <%= link_to groups_reminder_path(user_id: @user.id, group_id: @group.id) do %>
            <span class="floaty-list-item-label">Reminder</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" class="floaty-btn-icon floaty-btn-icon-non-main absolute-center">
                <path d="M22 5.72l-4.6-3.86-1.29 1.53 4.6 3.86 1.29-1.53zm-14.12-2.33l-1.28-1.53-4.6 3.85 1.29 1.53 4.59-3.85zm4.62 4.61h-1.5v6l4.75 2.85.75-1.23-4-2.37v-5.25zm-.5-4c-4.97 0-9 4.03-9 9s4.02 9 9 9c4.97 0 9-4.03 9-9s-4.03-9-9-9zm0 16c-3.87 0-7-3.13-7-7s3.13-7 7-7 7 3.13 7 7-3.13 7-7 7z" fill="#fff"/>
                <path d="M0 0h24v24h-24z" fill="none"/>
            </svg>
          <% end %>
        </li>
        <li class="floaty-list-item floaty-list-item--green">
          <%= link_to new_expense_path(user_id: @user.id, group_id: @group.id) do %>
            <span class="floaty-list-item-label">Create or Settle</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="floaty-btn-icon floaty-btn-icon-non-main absolute-center">
                <path d="M3 17.25v3.75h3.75l11.06-11.06-3.75-3.75-11.06 11.06zm17.71-10.21c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" fill="#fff"/>
                <path d="M0 0h24v24h-24z" fill="none"/>
            </svg>
          <% end %>
        </li>
      </ul>
      <div class="floaty-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="floaty-btn-icon floaty-btn-icon-plus absolute-center">
            <path d="M19 6.41l-1.41-1.41-5.59 5.59-5.59-5.59-1.41 1.41 5.59 5.59-5.59 5.59 1.41 1.41 5.59-5.59 5.59 5.59 1.41-1.41-5.59-5.59z" fill="#fff"/>
            <path d="M0 0h24v24h-24z" fill="none"/>
        </svg>
      </div>
    </div>
  </div>
<% end %>


<script>
  // FIXED NAV BUTTON SELECTOR
  let floatArea = document.querySelector(".floaty")
  let floatButton = document.querySelector(".floaty-btn")
  let floatList = document.querySelector(".floaty-list")
  floatArea.addEventListener("click", () => {
    console.log("I'm Clicked")
    floatArea.classList.toggle("is-active")
    floatButton.classList.toggle("active-rotate")
    floatList.classList.toggle("floaty-list-active")
  })
</script>
